<CadastroUsuarios>:
  id: Cadastro
  cols: 2
  Label:
    text: 'Usuario'
  TextInput:
    id: txt_cadastro_usuario
    multiline: False

  Label:
    text: 'Digite uma senha'
  TextInput:
    id: txt_cadastro_senha01
    multiline: False

  Label:
    text: 'Confirme a senha'
  TextInput:
    id: txt_cadastro_senha02
    multiline: False

  Button:
    id: btn_confirmar_cadastro
    text: 'Confirmar'

  Button:
    text: 'Cancelar'
    on_press: root.fechar_app()
